.tabs{
    position: absolute;
    bottom: 0px;
    background-color: #ffffff;
    width: 100%;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    display: flex;
    flex-flow: row wrap;
}

.tabs_item{
    height: 100%;
    width: 33%;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
}

.share{
    width: 33%;
    position: absolute;
    left: 33%;
    bottom: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    padding: 0px 16px;
}

.tabs_text{
    color: #40465f;
    font-size: 28rpx
}